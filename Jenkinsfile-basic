#!/usr/bin/env groovy
CODE_CHANGES = getGitChanges()
pipeline {
    agent none
    environment{
        NEW_VERSION = '1.3.0'
        SERVER_CREDENTIALS = credentials('nexus-docker')
    }
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application... version ${NEW_VERSION}"
                }
            }
        }
        stage('test') {
            steps {
                when{
                    expression{
                        BRANHC_NAME == 'jenkins-branch' && CODE_CHANGES == true
                    }
                }
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application... with credentials :${SERVER_CREDENTIALS} "
                    sh ${ SERVER_CREDENTIALS}
                }
            }
        }
    }
}
